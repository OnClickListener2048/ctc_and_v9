<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_detials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tohier.cartercoin.activity.GoodsDetialsActivity"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/title_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@mipmap/iv_gary_back"
            android:onClick="back"/>

        <TextView
            android:id="@+id/tv_goods_name"
            android:text=""
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#4d4d4d"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/main_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_goods_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:lines="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="#666666"
                android:textSize="12sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#666666"
                    android:gravity="center"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/main_color"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_goods_count"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#666666"
                    android:gravity="center"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:background="@color/main_color"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递：免运费"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#fefefe"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="产品详情"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#666666"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_color"/>
            <WebView
                android:id="@+id/web_detials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_kefu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            android:src="@mipmap/button_kefu"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_shape1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textColor="#ffb831"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@mipmap/reduce"
                android:layout_gravity="center"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/tv_buy_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffb831"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@mipmap/add"
                android:layout_gravity="center"
                android:padding="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="立刻购买"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_shape_feb831"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

    </LinearLayout>
</LinearLayout>
