<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/fragment_share_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册登录"
            android:textColor="#4d4d4d"
            android:textSize="18sp"
            />

        <RelativeLayout
            android:id="@+id/fragment_share_title_Zxing"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:onClick="onFenxiangErweima"
            android:visibility="gone" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/title_erweima_03" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_shape_feb831"
            />

        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#feb831"
            android:text="第三方登录"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_shape_feb831"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/linearLayout_qq_login"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/qq"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_weixin_login"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/weixin"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="50dp"
        android:layout_weight="1"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_phone_register"
            android:textColor="#ffffff"
            android:text="手机号注册"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_shape_feb831"
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/btn_phone_login"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="手机号登录"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_shape_feb831"
            android:layout_width="match_parent"
            android:layout_height="38dp" />


    </LinearLayout>

    <LinearLayout
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="38dp"
    >

    <ImageView
    android:paddingLeft="12dp"
    android:paddingRight="6dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_gravity="center_vertical"
    android:id="@+id/checkbox_agreement"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@mipmap/iv_agreement_no_checked"
    />

    <TextView
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="登录即认为同意软件使用"
    />

    <TextView
    android:layout_gravity="center_vertical"
    android:id="@+id/tv_into_agreement"
    android:textColor="#feb831"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="条款与协议"
    />


    </LinearLayout>


