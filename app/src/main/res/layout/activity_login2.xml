<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#ffffff" >

        <Button
            android:paddingLeft="20dp"
            android:background="@null"
            android:paddingRight="10dp"
            android:id="@+id/btn_phone_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#4d4d4d"
            android:textSize="15sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:paddingTop="4dp"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

        <ImageView
            android:padding="9.5dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/iv_block_icon"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <TextView
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                />

            <EditText
                android:textColorHint="#aaaaaa"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:inputType="number"
                android:maxLength="13"
                android:id="@+id/et_name"
                android:background="@null"
                android:hint="请输入手机号"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            </LinearLayout>

            <View
                android:layout_marginTop="4dp"
                android:background="#f7f7f7"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:id="@+id/ll_pwd"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <EditText
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#aaaaaa"
                    android:textSize="14sp"
                    android:id="@+id/et_password"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:lines="1"/>

                <ImageView
                    android:layout_marginTop="1dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingLeft="14dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/iv_pwd_isShow"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iv_pwd_no_show"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_code"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp">
                    <EditText
                        android:inputType="number"
                        android:layout_marginLeft="20dp"
                        android:textColorHint="#aaaaaa"
                        android:textSize="14sp"
                        android:id="@+id/et_code"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:layout_width="match_parent"
                        android:layout_height="38dp" />

                    <Button
                        android:layout_alignParentRight="true"
                        android:id="@+id/btn_code"
                        android:layout_width="wrap_content"
                        android:layout_height="38dip"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:text="获取短信验证码"
                        android:textColor="#8387fb"
                        android:layout_centerHorizontal="true"
                        style="?android:attr/borderlessButtonStyle"
                        />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:background="#f7f7f7"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <Button
                android:id="@+id/btn_phoneLogin"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape_yellow"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:text="登录"
                android:textSize="17sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:id="@+id/tv_code"
                    android:gravity="top"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="验证码登录"
                    android:textColor="#666666" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:id="@+id/tv_forget_pwd"
                    android:gravity="top"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="忘记密码？"
                    android:textColor="#666666"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape_feb831"
                />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#feb831"
                android:text="第三方登录"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_shape_feb831"
                />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="23dp"
            android:paddingTop="23dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/linearLayout_qq_login"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/iv_loginmain_qq_icon"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_weixin_login"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/iv_loginmain_wx_icon"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="38dp"
