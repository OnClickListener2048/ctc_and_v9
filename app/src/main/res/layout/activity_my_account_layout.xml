<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        >

        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的资产"
            android:textColor="#4d4d4d" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:id="@+id/tv_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="资产流水"
            android:textColor="#666666" />


        <ImageView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/iv_back2"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@mipmap/iv_gary_back" />
    </RelativeLayout>
    <View
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:text="总资产"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:text=""
            android:textSize="25sp"
            android:id="@+id/tv_all_assets"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4d4d4d"/>

        <View
            android:layout_marginTop="15dp"
            android:background="@color/main_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/linearLayout_into_tixian"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#fb6262"
                />

            <TextView
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                android:text="现金账户："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_rmb_count"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </LinearLayout>
        <View
            android:background="@color/main_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#ff0001"
                    />

                <TextView
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:text="私有矿池："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_private_mining"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=" "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"/>
            </LinearLayout>

            <View
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#508cee"
                    />

                <TextView
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:text="收益账户："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_α_count"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=" "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"/>
            </LinearLayout>

            <View
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#6e48ae"
                    />

                <TextView
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:text="金豆："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_consumption_count"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=" "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"/>
            </LinearLayout>


            <View
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <LinearLayout
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#54ae55"
                    />

                <TextView
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
                    android:text="银豆："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_droiyan_count"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text=" "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:background="@color/main_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:visibility="gone"
            android:layout_width="match_parent"
                android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#feb831"
                />

            <TextView
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                android:text="复投账户："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_rmbrich_count"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:background="@color/main_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>


            <FrameLayout
                android:id="@+id/tv_into_account_desc"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_help_bg"
                    />

                <ImageView
                    android:id="@+id/iv_question_mark"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/iv_question_mark"
                    />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:onClick="transferAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/zichanzhuanzhang"
                    android:id="@+id/imageView6" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收益账户转账"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:onClick="myFuTou"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/woyaofutou"
                    />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要复投"
                    android:textColor="#000000"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
