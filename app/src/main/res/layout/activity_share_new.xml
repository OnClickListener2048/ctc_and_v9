<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.tohier.cartercoin.activity.ShareActivity">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/title_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@mipmap/iv_write_back"
            android:onClick="back"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@mipmap/fenixang_bg"
            android:layout_gravity=""
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onXiazai"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/upload"
                />
            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onWeChat"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/wechat"
                />
            <ImageView
                android:id="@+id/iv_pengyouquan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onPengYouquan"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/pengyouquan"
                />
            <ImageView
                android:id="@+id/qq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onQQ"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/qq"
                />
            <ImageView
                android:id="@+id/qzone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="onQZone"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/qzone"
                />
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>
