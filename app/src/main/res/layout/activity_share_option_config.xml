<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share_option_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.tohier.cartercoin.activity.ShareOptionConfigActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/title_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@mipmap/iv_gary_back"
            android:onClick="back"/>

        <TextView
            android:text="余额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#4d4d4d"/>


        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="切换模拟盘"
            android:padding="10dp"
            android:gravity="right"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_dummy"
            android:textColor="#666666"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/main_color"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                    <TextView
                        android:text="现金账户 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_rmb"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_rmb_count"
                        android:textColor="#ffb831"
                        />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                >

                <TextView
                    android:text="收益账户 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ctc"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ctc_count"
                    android:textColor="#ffb831"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="银豆 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ctc1"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ctc_count1"
                    android:layout_below="@+id/tv_ctc1"
                    android:textColor="#ffb831"
                    />

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/main_color"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="93dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/tv_day_deal"
                        android:text="今日交易：5笔"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/tv_day_profit"
                        android:text="今日盈利：5笔"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"/>

                </LinearLayout>+


                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="@color/main_color"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_total_deal"
                        android:text="累计交易：0笔"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/tv_total_profit"
                        android:text="累计流水：0"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/tv_option_total_profit"
                        android:text="决战总流水：0"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"/>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/main_color">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_recharge"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="充值中心"
                    android:textColor="#ffb831"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="10dp"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_color"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/tv_deal_record"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="决战记录"
                    android:textColor="#ffb831"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="10dp"/>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/ll_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_invitation"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/invitation"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请宝友"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_invitation"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/bnt_fanhui"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:onClick="back"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_color"/>
            <RelativeLayout
                android:id="@+id/ll_zhibo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/iv_zhibo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/iv_shareoption_zhibo"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天室"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_zhibo"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:textSize="12sp"
                    />


                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/bnt_fanhui"
                    android:onClick="back"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView4" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_color"
                android:visibility="gone"/>


            <RelativeLayout
                android:id="@+id/ll_ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_ranking"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ranking"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排行榜"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_ranking"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/bnt_fanhui"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:onClick="back"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_color"/>
            <RelativeLayout
                android:id="@+id/ll_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_market"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/market"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/bnt_fanhui"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:onClick="back"
                    android:id="@+id/imageView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行情资讯"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_toRightOf="@+id/iv_market"
                    android:layout_toEndOf="@+id/iv_market"
                    android:layout_centerVertical="true"
                    android:id="@+id/textView2"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_color"/>

            <RelativeLayout
                android:id="@+id/ll_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_school"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/school"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手学堂"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_school"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/bnt_fanhui"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:onClick="back"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_color"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
