<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_signed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        >

        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="签到"
            android:textColor="#4d4d4d" />

        <ImageView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/iv_back2"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@mipmap/iv_gary_back"
            android:onClick="back"/>
    </RelativeLayout>
    <View
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_main_tv_main_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_40_px"
                android:textSize="@dimen/d_42_px"
                android:text=""/>

            <TextView
                android:id="@+id/activity_main_tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_40_px"
                android:textColor="#f26051"
                android:textSize="@dimen/d_95_px"
                android:text=""/>

            <LinearLayout
                android:id="@+id/activity_main_ll_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_130_px"
                android:layout_marginTop="@dimen/d_54_px"
                android:background="@color/hex_e9e9ea"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_main_tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d_43_px"
                    android:layout_marginStart="@dimen/d_43_px"
                    android:textColor="@color/hex_9c9c9c"
                    android:textSize="@dimen/d_43_px" />

                <TextView
                    android:id="@+id/activity_main_tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d_44_px"
                    android:layout_marginStart="@dimen/d_44_px"
                    android:textColor="@color/hex_9c9c9c"
                    android:textSize="@dimen/d_43_px" />
            </LinearLayout>

            <com.tohier.cartercoin.signed.SignView
                android:id="@+id/activity_main_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/activity_main_btn_sign"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/d_42_px"
                android:layout_marginRight="@dimen/d_42_px"
                android:text="@string/sign"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/bg_shape_feb831"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
