<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/shape_span_active_dialog_top"
        >

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/fragment_share_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="公告详情"
            android:textColor="#4d4d4d"
            android:textSize="18sp"
            />


        <ImageView
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/title_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@mipmap/iv_cancel" />

    </RelativeLayout>
    <View
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/pro"
        android:layout_gravity="center_vertical"
        android:max="100"
        android:indeterminate="false"
        android:visibility="gone"/>

    <WebView
        android:background="@drawable/shape_span_active_dialog_buttom"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"/>

    <TextView
        android:gravity="center"
        android:background="@drawable/shape_span_active_dialog_buttom"
        android:textColor="#f26051"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:id="@+id/tv_target_more"
        android:text="快分享出去吧>>"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>