<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="65dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:id="@+id/iv_img"
                    android:layout_alignParentRight="true"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/mai_chu_hou"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/yinying_new"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
                <ImageView
                    android:id="@+id/iv_new"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/baoyouquan_xiaohongdian"
                    android:layout_gravity="right"/>
            </FrameLayout>


        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <TextView
             android:lines="1"
             android:textSize="13sp"
             android:ellipsize="end"
             android:id="@+id/tv_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="卡特币行情:比价波动渐小市场"
                android:textColor="#4d4d4d"
            />
            <TextView
                android:maxLines="1"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:id="@+id/tv_gaishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="谨慎前行"
                android:textSize="10sp"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:id="@+id/tv_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资讯"
                    android:background="@drawable/bg_shape_feb831"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textColor="#808080"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017/02/01"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:drawableLeft="@mipmap/shouye_shizhong"
                    />

                <TextView
                    android:textColor="#808080"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/shouye_yanjing"
                    />

                  </LinearLayout>




        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>