<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_shape_ffffff"
        >

    <TextView
        android:id="@+id/tv_icon_type_name"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ETH 以太坊"
        />

    <LinearLayout
        android:id="@+id/linearLayout_into_eth_flowing_water"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/iv_eth_icon"
            />

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_account"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text=""
            android:textColor="#f26051"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/tv_have"
                android:lines="1"
                android:ellipsize="end"
                android:text="可用:0"
                android:textColor="#4d4d4d"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_no_have"
                android:layout_marginTop="5dp"
                android:text="锁定:0"
                android:textColor="#4d4d4d"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_rmb"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >
    <TextView
        android:id="@+id/tv_cz"
        android:textColor="#feb831"
        android:gravity="center"
        android:text="充值"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <View
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="#e7e7e7"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_tx"
        android:textColor="#f26051"
        android:gravity="center"
        android:text="提现"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

            <View
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#e7e7e7"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_zd"
                android:textColor="#4a90e2"
                android:gravity="center"
                android:text="账单"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_in_or_out"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_in"
                android:textColor="#feb831"
                android:gravity="center"
                android:text="转入"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
               android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#e7e7e7"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_out"
                android:textColor="#f26051"
                android:gravity="center"
                android:text="转出"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#e7e7e7"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_zd2"
                android:textColor="#4a90e2"
                android:gravity="center"
                android:text="账单"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </FrameLayout>

    </LinearLayout>

</LinearLayout>
