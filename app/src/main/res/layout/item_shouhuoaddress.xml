<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ellipsize="end"
                android:lines="1"
                android:layout_weight="2"
                android:textColor="#000000"
                android:id="@+id/tv_shouhuoName"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:text="   "
                android:gravity="center_vertical"
                />

            <TextView
                android:ellipsize="end"
                android:lines="1"
                android:layout_weight="3"
                android:textColor="#000000"
                android:id="@+id/tv_shouhuoPhone"
                android:layout_marginLeft="30dp"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:text="   "
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_shouhuoAddress"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="   "
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a1a1a1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/linear_set_default"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <ImageView
                android:id="@+id/iv_setting_default"
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/unchecked"
                />

            <TextView
                android:textColor="#000000"
                android:text="设为默认"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dip" />
         </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:id="@+id/linear_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_edit"
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/iv_edit"
                    />

                <TextView
                    android:textColor="#000000"
                    android:text="编辑"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:id="@+id/linear_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <ImageView
                android:id="@+id/iv_del"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/iv_del"
                />

            <TextView
                android:textColor="#000000"
                android:text="删除"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dip" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>