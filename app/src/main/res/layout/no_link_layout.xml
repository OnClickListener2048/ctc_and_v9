<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
   >

    <ImageView
        android:id="@+id/iv_no_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/no_link_1"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tv_no_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#666666"
        android:text="亲，您的网络状况不好哦!"
        android:layout_below="@id/iv_no_link"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#999999"
        android:text="别紧张，试试刷新页面"
        android:layout_below="@id/tv_no_link"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:text="  重新加载  "
        android:background="@drawable/edit_text_shape3"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:padding="7dp"
        android:layout_marginTop="15dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/tv1"/>

</LinearLayout>
