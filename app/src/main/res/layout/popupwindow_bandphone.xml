<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

            <TextView
                android:textSize="18sp"
                android:background="@drawable/bg_shape_feb831_top"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="绑定手机号"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bg_shape_ffffff_buttom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLength="11"
                android:inputType="number"
                android:editable="true"
                android:id="@+id/et_phonenum"
                android:textColor="#000000"
                android:textColorHint="#bebebe"
                android:textSize="13sp"
                android:gravity="center"
                android:hint="请输入手机号"
                android:background="@drawable/bg_shape_efefef"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <EditText
                    android:textColor="#000000"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:editable="true"
                    android:id="@+id/et_yzm"
                    android:textColorHint="#bebebe"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:hint="请输入验证码"
                    android:background="@drawable/bg_shape_efefef"
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btn_getyzm"
                    android:text="获取短信验证码"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_shape_feb831"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />

                </LinearLayout>

            <Button
                android:id="@+id/btn_bandphone"
                android:text="立即绑定"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_shape_feb831"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#4d4d4d"
                    android:hint="如出现手机号绑定问题请及时联系客服"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    />

                <ImageView
                    android:id="@+id/iv_kefu"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/iv_kefu_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:textColor="#4d4d4d"
                android:id="@+id/tv_return_login"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回登录"
                />

            </LinearLayout>
    </ScrollView>
</LinearLayout>
