<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/iv_into_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iv_prompt_authentication"
        />

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/iv_cancel_authentication"
            android:padding="10dp"
            android:layout_alignRight="@id/iv_into_authentication"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/iv_cancel_authentication"
            />

    </RelativeLayout>

</LinearLayout>
